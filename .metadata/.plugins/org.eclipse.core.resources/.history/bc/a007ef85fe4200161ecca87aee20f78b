#include <iostream>
using namespace std;

int main() {

	const string password = "hello";

	do{
	cout << "Enter password: " << flush;
	string input;
	cin >> input;
	if(input != password){
		cout << "Access denied." << endl;
	}
		} while (input != password);

	cout << "Password accepted." << endl;
	}


	return 0;
}
