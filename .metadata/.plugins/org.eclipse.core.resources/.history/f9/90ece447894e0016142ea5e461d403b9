#include <iostream>
using namespace std;

int main() {

	int nValue = 8;

	int *pnValue = nValue;


	cout <<"Int value: "<<nValue<<endl;
	cout <<"Address value: "<<pnValue<<endl;

	cout <<"Int value via pointer: "<<*pnValue<<endl;

	return 0;
}
