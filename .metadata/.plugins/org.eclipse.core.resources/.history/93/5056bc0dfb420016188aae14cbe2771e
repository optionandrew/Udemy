#include <iostream>
using namespace std;

int main() {

	const string password = "hello";

	cout<<"Enter password: "<<endl;
	string input;
	cin>>input;

	if(input == password){
		cout<<"Password accepted."<<endl;
	}
	else{
		cout<<"Access denied."<<endl;
	}
	while(input != password){
		cout<<"Enter password: "<<endl;
		string input;
		cin>>input;
		cout<<"Access denied."<<endl;

	}

	return 0;
}
