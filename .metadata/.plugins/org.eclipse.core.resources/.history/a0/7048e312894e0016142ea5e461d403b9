#include <iostream>
using namespace std;

int main() {

	int nValue = 8;

	int* pnValue = &nValue;

	nValue =9;

	cout <<"Int value: "<<nValue<<endl;
	cout <<"Address value: "<<pnValue<<endl;

	return 0;
}
