#include <iostream>
#include<iomanip>
using namespace std;

int main() {

	float fValue = 76.4;
	cout <<setprecision(20)<< fixed<< fValue<< endl;
	cout<<sizeof(float)<<endl;
	cout << scientific<< fValue<< endl;

	double dvalue=76.4;
	cout<<setprecision(20)<<fixed<<dvalue<<endl;



	return 0;
}
